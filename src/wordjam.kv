#:import com src.common

<MainLayout>:

    # Setting up white background for the layout
    canvas.before:

        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:

        size: root.size
        orientation: 'vertical'

        BoxLayout:

            size_hint_y: 0.1
            orientation: 'horizontal'

            canvas.before:

                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:  # Coin Display

                pos: self.pos
                size: self.size
                size_hint_x: 0.5

                Image:

                    pos: self.pos
                    anim_loop: 0
                    anim_delay: 0.1
                    size: 33, 33  # 30x30 gif, but we add some extra for space
                    source: com.RES + 'coin.gif'

                Label:
                    text: '[b]0[/b]'
                    color: com.FONT_COLOR
                    halign: 'left'
                    valign: 'center'
                    markup: True
                    text_size: self.size

            BoxLayout:  # For some spacing

            BoxLayout:  # Time Display

                pos: self.pos
                size: self.size
                size_hint_x: 0.5

                Image:

                    pos: self.pos
                    size: 33, 33  # 30x30 png, but we add some extra for space
                    source: com.RES + 'clock.png'

                Label:

                    text: '[b]00:00:00[/b]'
                    color: com.FONT_COLOR
                    halign: 'left'
                    valign: 'center'
                    markup: True
                    text_size: self.size

        BoxLayout:  # Content Canvas

            id: content
            orientation: 'vertical'

            GridLayout:

                id: grid
                cols: 15
                rows: 20

            Label:

                id: load_txt
                text: 'Hold on...'
                color: 0, 0, 0, 1

        BoxLayout:  # Status bar

            size_hint_y: 0.05
            orientation: 'horizontal'

            canvas.before:

                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:

                text: 'Made by [b]AshBlade[/b]'
                halign: 'left'
                markup: True
                text_size: self.size
                padding: 3, 3
                color: com.FONT_COLOR
