# The UI definitions of the game is here
#:import com src.common
#:import Clock kivy.clock.Clock
#:import Window kivy.core.window.Window
#:import Factory kivy.factory.Factory

# NOTE: The ids were important to access each layout's widget. Also the name, id of the layout must be same

# Layout definitions
ScreenManager:
    MainLayout:
        id: main
    LevelList:
        id: level

# The custom grid buttons. Most of the logic is defined in python grid.py
<WordButton@Button>:
    on_touch_down: Clock.schedule_once(lambda x: exec("app.root.ids.main.ids.status_bar.text = com.DEFAULT_STATUS_TEXT"), 5); app.root.ids.main.ids.status_bar.text = ("Press [b]ESC[/b] to cancel selection" if not com.IS_MOBILE else "Press [b]any[/b] letter to cancel selection") + ((", [b]hint[/b]: " + com.GRID_HINT[int(self.id)][1:-1]) if com.GRID_HINT[int(self.id)][1:-1] != "" else "")

<MainLayout@Screen>:
    name: "main"
    # Setting up white background for the layout
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size: root.size
        orientation: 'vertical'
        padding: 5 if not com.IS_MOBILE else 30

        BoxLayout:  # Content Canvas
            id: content
            orientation: 'vertical'
            padding: 15 if not com.IS_MOBILE else 30

            GridLayout:
                id: grid
                cols: 14
                rows: 20

            Image:
                id: load
                source: com.RES + 'banner.png'

        BoxLayout:
            size_hint_y: 0.08
            orientation: 'horizontal'

            BoxLayout:
                pos: self.pos
                size: self.size
                padding: 10
                size_hint_x: 1
                orientation: 'horizontal'

                Button:
                    id: level_list
                    text: "LEVELS"
                    size_hint_y: 0.6
                    on_release: app.root.current = 'level'

            BoxLayout:  # Coin Display
                pos: self.pos
                size: self.size
                padding: 10
                size_hint_x: 0.9
                orientation: 'horizontal'

                Image:
                    pos_hint_y: 1.5
                    anim_loop: 0
                    anim_delay: 0.1
                    size_hint: (0.45, 0.45) if not com.IS_MOBILE else (0.9, 0.9)
                    source: com.RES + 'coin.gif'

                Label:
                    id: coins
                    text: '[b]0[/b]'
                    color: com.FONT_COLOR
                    halign: 'left'
                    valign: 'bottom'
                    markup: True
                    text_size: self.size

            BoxLayout:  # For some spacing

            BoxLayout:  # Time Display
                padding: 10
                pos: self.pos
                size: self.size
                size_hint_x: 1.1
                orientation: 'horizontal'

                Image:
                    pos: self.pos
                    size_hint: (0.45, 0.45) if not com.IS_MOBILE else (0.9, 0.9)
                    pos_hint_y: 1.5
                    source: com.RES + 'clock.png'

                Label:
                    markup: True
                    id: time
                    halign: 'left'
                    valign: 'bottom'
                    text_size: self.size
                    color: com.FONT_COLOR
                    text: '[b]00:00:00[/b]'

        BoxLayout:  # Status bar
            size_hint_y: 0.08

            Label:  # The credit text
                id: status_bar
                markup: True
                padding: 15, 15
                text_size: self.size
                color: com.FONT_COLOR
                text: com.DEFAULT_STATUS_TEXT
                halign: 'left' if not com.IS_MOBILE else 'center'

        BoxLayout:
            size_hint_y: 0.4 if com.IS_MOBILE else 0.05

            GridLayout:
                id: keyboard_layout
                cols: 9
                rows: 3


<LevelSelectionButton@BoxLayout>: # Level Selection Button
    orientation: 'horizontal'
    size_hint_y: None
    height: 90
    level_number: ''
    level_time: ''

    BoxLayout:
        orientation: 'vertical'

        Label:
            color: com.FONT_COLOR
            halign: 'left'
            valign: 'center'
            text: root.level_number
            text_size: self.size

        Label:
            color: com.FONT_COLOR
            halign: 'left'
            valign: 'top'
            text: root.level_time
            text_size: self.size

    Button:
        size_hint_x: 0.35
        padding: 0, 30
        text: "Play"
        disabled: True  if root.level_time == 'Not Completed' else False

<LevelList@Screen>:
    name: 'level'

    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout: # The difficulty bar
            size_hint_y: 0.1
            padding: 15
            spacing: 10
            orientation: 'horizontal'

            Button:
                text: "Back"
                on_touch_down: app.root.current = 'main'

            Button:
                text: "Refresh"
                on_touch_down: self.text = "Done"; app.async_lazy_load_level_list(root); Clock.schedule_once(lambda x: exec("self.text = 'Refresh'"), 1)

        ScrollView:  # The level list

            StackLayout:
                id: level_list_layout
                padding: 20
                spacing: 10
                on_pos: app.async_lazy_load_level_list(root)
                size_hint_y: None
                height: 5000
